<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>
	<servlet>
		<servlet-name>LoginController</servlet-name>
		<display-name>LoginController</display-name>
		<description></description>
		<servlet-class>com.pahanaedu.controller.LoginController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CustomerController</servlet-name>
		<display-name>CustomerController</display-name>
		<description></description>
		<servlet-class>com.pahanaedu.controller.CustomerController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AppController</servlet-name>
		<display-name>AppController</display-name>
		<description></description>
		<servlet-class>com.pahanaedu.controller.AppController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ItemController</servlet-name>
		<display-name>ItemController</display-name>
		<description></description>
		<servlet-class>com.pahanaedu.controller.ItemController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>BillController</servlet-name>
		<display-name>BillController</display-name>
		<description></description>
		<servlet-class>com.pahanaedu.controller.BillController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EmailController</servlet-name>
		<display-name>EmailController</display-name>
		<description></description>
		<servlet-class>com.pahanaedu.controller.EmailController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LogoutController</servlet-name>
		<display-name>LogoutController</display-name>
		<description></description>
		<servlet-class>com.pahanaedu.controller.LogoutController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>EmailController</servlet-name>
		<url-pattern>/EmailController</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogoutController</servlet-name>
		<url-pattern>/LogoutController</url-pattern>
	</servlet-mapping>
	<!-- Not Found Error -->
	<error-page>
		<error-code>404</error-code>
		<location>/error/404.jsp</location>
	</error-page>
	<!-- Forbidden Error -->
	<error-page>
		<error-code>403</error-code>
		<location>/error/403.jsp</location>
	</error-page>
	<!-- Internal Server Error -->
	<error-page>
		<error-code>500</error-code>
		<location>/error/500.jsp</location>
	</error-page>
</web-app>
